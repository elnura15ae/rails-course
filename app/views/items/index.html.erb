<h2 style= "color: red; margine: 0 auto">all items</h2> <br/>

<table>
<tr>
    <th>item id</th>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th>Rating</th>
    <th>Delete</th>
</tr>


<% @items.each do |item| %>
    <tr>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <td><%= item.votes_count %>, <%= link_to '+', upvote_item_path(item) %></td>
        <td><%= button_to 'delete', item_path(item), method: :delete %></td>
    </tr>
<% end %> 
</table>

<br/>
<%= button_to "new item", new_item_path, method: :get %>
<%= button_to "only expensive", expensive_items_path, method: :get %>
<%= button_to "index", items_path, method: :get %>