<div class="container">
<h2 style= "color: #B00100; margine: 0 auto">create new item</h2>

<%= simple_form_for @items do |f| %>

<%= f.input :name, input_html: {class: 'form-text'} %>
<%= f.input :price, input_html: {class: 'form-text'}, required: true %>
<%= f.input :description, input_html: {class: 'form-text'}%>

<%= f.button :submit, class: "btn-primary" %>
<% end %>

<%= render partial: 'shared/email' %>
</div>