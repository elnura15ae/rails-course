<!DOCTYPE html>
<html>
  <head>
    <title>RailsCourse</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('img1.jpg') %>
  </head>

  <body>
    <h2 style="color: #B00100;">User Panel</h2>
    <p style= "color: #B00100"><%= flash[:error] %></p>
    <p style= "color: #006400"><%= flash[:success] %></p>
    <%= yield %>
  </body>
</html>
